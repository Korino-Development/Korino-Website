---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="404 - Not Found" description="Invalid page."
        color1="#e52d27" color2="#b31217">
    <h1 class="font-bold text-4xl md:text-5xl mb-4" id="text">
        Redirecting in 3 seconds...
    </h1>

    <Button text="🏠 Click if you aren't being redirected" href="/"/>
</Layout>

<script>
    const text_element = document.getElementById("text")!;

    function redirect() {
        window.location.replace("/")
    }

    window.addEventListener("load", () => {
        setTimeout(redirect, 3000);
    });
</script>