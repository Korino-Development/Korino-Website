---
export interface Props {
	one: string;
	two: string;
	three: string;
	four: string;
}

const { one, two, three, four } = Astro.props;
---

<div id="menu" class="hidden">
	<div class="xl:gap-24 lg:gap-16 md:gap-12 sm:gap-8 gap-6" id="menu-items">
		<div class="menu-item">{ one }</div>
		<div class="menu-item">{ two }</div>
		<div class="menu-item">{ three }</div>
		<div class="menu-item">{ four }</div>
	</div>
	<div id="menu-background-pattern"></div>
	<div id="menu-background-image"></div>
</div>

<style>
	#nav {
		position: fixed;
		z-index: 9999999;
	}

	#menu {  
		align-items: center;
		display: flex;
		height: max-content;
		width: max-content;
	}

	#menu-items {
		margin-left: clamp(4rem, 20vw, 48rem);
		z-index: 2;
		display: flex;
		flex-direction: column;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
	}

    #menu > #menu-background-pattern {
        background-position: 0% calc(-25% * (var(--active-index, 0) + 1));
    }

    #menu > #menu-background-image {
        background-position: center calc(45% + 25% * var(--active-index, 0));
    }

	#menu-background-image {
		background-image: url("https://cdn.discordapp.com/attachments/1036756543917527164/1070785425016365126/image.png");
		background-position: center 40%;
		background-size: 110vmax cover;
		height: 100%;
		left: 0px;  
		opacity: 0.15;
		position: absolute;
		top: 0px;
		transition: opacity 800ms ease,
			background-size 800ms ease,
			background-position 800ms ease;
		width: 100%;
		z-index: 0;
	}

	#menu-items:hover ~ #menu-background-pattern {
		background-size: 11vmin 11vmin cover;
		opacity: 0.5;
	}

	#menu-items:hover ~ #menu-background-image {
		background-size: 100vmax cover;
		opacity: 0.1;
	}

	#menu-items:hover > .menu-item {
		opacity: 0.3;
	}

	#menu-items:hover > .menu-item:hover {
		opacity: 1; 
	}

	.menu-item {
		color: white;
		cursor: pointer;
		display: block;
		font-size: clamp(3rem, 8vw, 8rem);
		padding: clamp(0.25rem, 0.5vw, 1rem) 0rem;
		text-decoration: none;
		transition: opacity 400ms ease;
	}
</style>
